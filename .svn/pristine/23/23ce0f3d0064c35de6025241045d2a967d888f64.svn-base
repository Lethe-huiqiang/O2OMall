@charset "utf-8";
	body {
	font-size: 12px;
	font-family: Arial,Helvetica,sans-serif;
	background: #fff
}
h1,h2,h3,h4,h5,h6,p,ul,ol,dl,dt,dd,li,body,form,input,button,img,cite,strong,em,table,td,th {
	padding: 0;
	margin: 0
}
h1,h2,h3,h4,h5,h6 {
	font-size: 14px
}
img,table,td,th {
	border: 0
}
ul,ol {
	list-style-type: none
}
.art_bg {
	width: 100%
}
.art_bg .article_content {
	width: 1190px;
	margin: 0 auto;
}
.article_content .right {
	width: 850px
}
.article_content .right .shop_text_list {
	width: 850px
}
.article_content .right .article_wrap {
	width: 850px
}
.article_content .right .shop_text_list h3 {
	padding: 10px 0 15px 10px
}
.article_content .left {
	width: 190px;
	margin: 0;
	background: url(../img/art_title.png) no-repeat 0 0;
	min-height: 600px;
}
.article_content {
	width: 1000px;
	margin: 10px auto 0;
	min-height: 500px;
}
.article_content .left {
	width: 208px;
	float: left
}
.article_content .right {
	width: 780px;
	float: right;
	border-bottom: 1px solid #dfdfdf;
}
.clear {
	clear: both;
	height: 0;
	font-size: 1px
}
.art_left {
	background: #c8b5aa;
	min-height: 400px;
}
.art_left h2 {
	background-color: #d8cac1;
	clear: left;
	height: 37px;
	line-height: 37px;
	padding-left: 20px;
	font-family: Verdana,'Microsoft YaHei';
	font-size: 16px;
	font-weight: bold;
}
.art_left .classify_list li {
	background: url(../img/art_left_bg.png) no-repeat 0 8px #c8b5aa;
	clear: left;
	height: 37px;
	line-height: 37px;
	padding-left: 20px;
	font-size: 14px;
}
.art_left .classify_list li {
	overflow: hidden;
}
.art_left .rulesbox_notice a {
	color: #2e180d;
	font-size: 12px;
}
.art_left .rulesbox_notice a: hover {
	color: #bf0000
}
.classify_list a {
	color: #2e180d;
}
.classify_list a: hover {
	color: #bf0000;
	text-decoration: none;
}
.classify_list ul{
	padding-bottom: 15px;
}
.classify_list li{
	height: 25px;
	line-height: 25px;
	padding-left: 25px;
	background: url(../images/ico.gif) no-repeat 5px -311px;
}
.classify_list a{
	color: #666;
	text-decoration: none;
}
.classify_list a:hover{
	color: red;
	text-decoration: underline;
}
.shop_text_list table{
	width: 100%;
	border-collapse: collapse;
}
.shop_text_list th{
	height: 30px;
	font-weight: normal;
	background: url(../images/ornament.gif) repeat-x left bottom;
}
.shop_text_list td{
	height: 30px;
	color: #80bd5d;
	border-bottom: 1px solid #dfdfdf;
}
.shop_text_list td a{
	color: #666;
	text-decoration: none;
	padding-left: 18px;
	background: url(../images/ico.gif) no-repeat -17px 3px;
	font-size: 12px;
}
.shop_text_list td a:hover{
	color: #c60;
	text-decoration: underline
}
.width9 {
	width: 155px;
}




<!--文章详细内容页css -->
.article_wrap {
	width: 772px;
	padding: 3px;
	border: 1px solid #dcdcdc;
	background: #f8f8f8
}
.keyword {
	width: 850px;
	height: 30px;
	line-height: 30px;
	z-index: 1;
	padding-left: 20px;
	border-bottom: 1px solid #dcdcdc;
	margin: 0 auto;
	font-family: "宋体";
	color: #666;
	background: url(../images/keyword_bg.gif)
}
.article_con {
	padding: 20px;
	background: #fff
}
.article_con h1 {
	font-size: 16px;
	color: #3d3f3e;
	text-align: center
}
.article_con h2 {
	color: #9a9a9a;
	font-size: 12px;
	padding: 5px 0 20px;
	margin-bottom: 20px;
	font-weight: normal;
	text-align: center;
	border-bottom: 1px solid #d2d2d2
}