@charset "utf-8";
	.pr {
	position: relative;
	z-index: 99
}
.f_l {
	float: left
}
.f_r {
	float: right
}
.clear {
	clear: both
}
.blank {
	clear: both;
	height: 8px;
	overflow: hidden
}
.clearfix: after {
	visibility: hidden;
	display: block;
	font-size: 0;
	content: " ";
	clear: both;
	height: 0
}
.clearfix {
	display: inline-table;
}

.goods_info_L {
	position: relative;
	float: left;
	width: 460px;
	z-index: 1
}
.goods_img {
	width: 462px;
	float: left
}
.goods_img_box {
	border: 1px solid #cdcdcd;
	z-index: 1
}
.goods_img_box #zoom1 {
	width: 460px;
	height: 460px
}
.commodity_info_R{
	float:right;
	width:480px;
}

.commodity_info_R li {
	width: 460px;
	float: left;
	display:inline;
	padding: 4px 0;
}

.commodity_info_R h2 {
	display: block;
	line-height: 28px;
	font-size: 36px;
	color: #000;
	font-weight: 600
}
.commodity_info_R ul {
	margin: 8px 0 0 0;
	padding: 0 10px
}
.goods_info_R li {
	width: 460px;
	float: left;
	padding: 4px 0
}
.commodity_info_R li span {
	color: #826857;
	padding: 2px 0
}
.commodity_info_R li strong {
	color: #c00;
	font-size: 24px
}
.goods_info_R li a {
	color: #826857
}
.goods_info_R li a: hover {
	color: #826857;
	text-decoration: underline
}
.commodity_info_R li .g_tab {
	display: inline-block;
	width: 65px;
	color: #999
}

.g_serPromise {
	border: 2px solid #efece8;
	border-radius: 2px 2px 2px 2px;
	position: relative;
	z-index: 2;
	width:auto;
}
.g_serPromise dt {
	background-color: #efece8;
	color: #999;
	display: block;
	font-size: 12px;
	font-weight: bold;
	height: auto;
	left: 0;
	line-height: 18px;
	padding: 6px 11px;
	position: absolute;
	width: 30px
}
.g_serPromise dd {
	background-color: #fcfaf9;
	left: 48px;
	overflow: hidden;
	padding: 6px 0 6px 20px;
	position: relative;
	z-index: 2
}
.g_serPromise dd ul {
	display: block;
	z-index: 2
}
.g_serPromise dd ul li {
	float: left;
	margin-bottom: 0;
	margin-right: 35px;
	width: auto;
	padding: 0;
	font-size: 12px
}
.g_serPromise dd ul li h3 {
	color: #999;
	font-weight: normal;
	line-height: 18px;
	margin-bottom: 2px;
	font-size: 12px
}
.g_serPromise dd ul li a {
	border-radius: 2px 2px 2px 2px;
	color: #fff;
	display: block;
	float: left;
	height: 16px;
	line-height: 16px;
	margin-right: 5px;
	padding: 0 2px
}
.g_serPromise dd ul li a span {
	background: 0;
	color: #fff;
	cursor: pointer;
	display: block;
	float: left;
	font-size: 12px;
	height: 16px;
	line-height: 16px;
	overflow: visible;
	width: auto;
	padding: 0
}
.g_serPromise dd ul li a: hover {
	box-shadow: 1px 1px 2px #646362;
	text-decoration: none
}
.g_serPromise dd ul li a .g_serPromise_serLv {
	color: #826857;
	background-color: #b10000;
	border-radius: 0 2px 2px 0;
	color: #fff;
	cursor: pointer;
	display: block;
	float: left;
	height: 16px;
	line-height: 16px;
	*line-height: 14px;
	line-height: 14px\0;
	margin-bottom: -4px;
	overflow: visible;
	position: relative;
	right: -2px;
	text-align: center;
	width: 14px;
	padding: 0 2px
}
.g_serPromise dd ul li .g_sn_1 {
	background-color: #dd696a
}
.g_serPromise dd ul li .g_sn_2 {
	background-color: #5aa3c4
}
.g_serPromise dd ul li .g_sn_3 {
	background-color: #36aa68
}

.goods_info_R .chk_ul .handle {
	width: 448px
}
.goods_info_R .chk_ul .handle ul {
	width: 438px
}
.goods_info_R .chk_ul li.handle_title {
	width: 460px
}