<%@ page language="java" import="java.util.*" pageEncoding="utf-8"%>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
String referer = request.getHeader("referer");
%>

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
  <head>
    <base href="<%=basePath%>">
    
    <title>Login page!</title>
    
	<meta http-equiv="pragma" content="no-cache">
	<meta http-equiv="cache-control" content="no-cache">
	<meta http-equiv="expires" content="0">    
	<meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
	<meta http-equiv="description" content="This is my page">
	
	<link rel="stylesheet" type="text/css" href="<%=basePath %>frontStage/users/css/bootstrap.min.css">
	<style type="text/css">
	.right{float:left;margin-top:30px; width:50%; height:300px;margin-left:25%;border:2px solid #428BCA;margin-bottom:70px;}
	.controls{margin-left:20%;}
	</style>
	

  <script type="text/javascript" src="<%=basePath %>frontStage/users/js/jquery-1.8.2.min.js"></script>
  <script type="text/javascript" src="<%=basePath %>frontStage/users/js/jquery.form.js"></script>
  <script type="text/javascript" src="<%=basePath %>frontStage/users/js/login.js"></script>
  </head>
  
  <body>
  <div id="header">
	<jsp:include flush="true" page="header.jsp"/><!--引入header.jsp-->
	</div>
  
  <form  id="login" method="post">
  
  	<div>
  	<span class="" style="color:red;margin-right:5px;" id="validation"></span>
  	</div>
  	
  	
  	<div class="right" style="text-align:center;">
  		<div style="height:100%;width:10%;float:left;border: 2px solid #428BCA;background-color:#a6a6aa;"></div>
  		<div  style="height:60px;width:60%;float:left;border: 2px solid #428BCA;background-color:#4f4d56;">
	<label><h2 style="color:white;">会员登录</h2></label>  
		</div>
		<div style="height:100%;width:30%;border: 2px solid #428BCA;float:right;text-align:left;background-color:#a2a2aa;">
			<p style="margin-top:30%;margin-left:20%;">还没帐号？<a href="javascript:location.href='users_registUI.action'">马上注册</a></p>
			<p style="margin-left:20%;">——&gt;返回<a>上一页</a></p>
			<p style="margin-left:20%;">——&gt;返回<a>首页</a></p>
			<!-- <input class="login_sub submitA btn btn-primary" id="regist" type="button" value="注册"  onclick="window.open('users_registUI.action')"> -->
		</div>
		
		
		<div style="border:2px solid #428BCA;height:240px;width:60%;margin-left:10%;margin-top:60px;background-color:#ffffff;">
		
     <div class="control-group registGroup" style="margin-top:30px;"> 
       <div class="controls">   
            <h3 style="text-align:left;">邮箱:</h3><input type="text" name="users.email" style="width:60%;" class="form-control" label="邮箱" id="email" placeholder="******@***.***"/><br>
<!--             <input type="hidden" id="emailHidden" value="false">  <span class="" style="color:red;margin-right:5px;" id="validEmail"></span>-->
	 	</div>
	</div>
	

    <div class="control-group registGroup" style="margin-bottom:20px;">       
      	<div class="controls">
      	<h3 style="text-align:left;">密码:</h3><input type="password" name="users.password" class="form-control" style="width:60%;" id="password" label="密码"  placeholder="6位以上12以下的数字,字母及下划线组合"/>
<!--       		<input type="hidden" id="passwordHidden" value="false"> -->

		<div style="width:35px;float:right;">
			<input class="login_sub submitA btn btn-primary btn-lg" id="usersLogin" type="button" value="登录"  onclick="userslogin();">
		</div>
		
	 	</div>
	 	
	</div>
	

		
	
	</div>
	
	</div>
	
</form>

<div id="footer" style="clear:both">
	<jsp:include flush="true" page="footer.jsp"/><!--引入footer.jsp-->
</div>

	<input type="hidden" value="<%=referer%>" name="referer" id="referer"/>
  </body>
</html>
