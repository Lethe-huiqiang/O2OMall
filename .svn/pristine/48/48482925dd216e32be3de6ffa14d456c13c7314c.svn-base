/* CSS Document */
*{margin:0; padding:0;}
html{ background:#FFFFFF;}

#head,#content,#footer{margin:0 auto;}
#head{ background:url(../images/repair-do_background.gif) repeat-x; height:inherit;}
  #logo{ padding:25px 20px 25px 150px; float:left;}
  #head_search{float:left; margin:80px 0px 30px 100px; width:360px; height:50px; background:url(../images/repair-do_02.png);}
  #search{height:31px; width:247px; margin-top:12px; margin-left:45px; display:block; float:left; border-right-color:#FFFFFF;}
  #search_button{background:url(../images/repair-do_go.png); margin-top:14px; height:28px; width:63px; border:none; float:left}
#content{ width:auto; margin:0px auto;}
.ui-icon{ background:#999999;}
#nav { width:140px; line-height: 38px;  list-style-type: none; text-align:left; padding-left:150px; padding-top:30px; float:left;font-weight:bold;}
#nav a { width: 170px;  display: block; height:38px;}
#nav li { background:url(../images/repair-do_06.gif); border-bottom:#FFF 1px solid; float:left; text-align:center;}
#nav a:link  { color:#666; text-decoration:none;}
#nav a:visited  { color:#666;text-decoration:none;}
#nav a:hover  { color:#FFF;text-decoration:none;font-weight:bold;}
/*==================二级目录===================*/
#nav li ul { list-style:none; text-align:left; display:none;}
#nav li ul li{  background: #EBEBEB; /*二级目录的背景色*/ display:block;}
/*下面是二级目录的链接样式*/
#nav li ul a:link  { color:#00CCFF text-decoration:none;}
#nav li ul a:visited  { color:#00CCFF;text-decoration:none;}
#nav li ul a:hover { color:#00CCFF; text-decoration:none; font-weight:normal; background:#00FFFF; }
/*==============================*/
#nav li:hover ul { left: auto;}
#nav li.sfhover ul { left: auto;}

#right{float:left;  margin-top:30px; width:1346px; height:auto;border:1px solid #00CCFF;}
#calender{padding:0px 200px 0 100px; margin-left:30px; padding-bottom:20px;}
#text{ padding-left:300px;}
#tabel { width:500px; float:left; padding-bottom:20px; margin-left:20px;}
#tabel p{border:1px solid #000000; width:500px;height:30px;}
#tabel p label{padding:0 15px; font-family:Verdana, Arial, Helvetica, sans-serif;}
	#navg{padding:20px 0 ; text-align:center;}
   #showclaim{padding:20px 0 ; text-align:center;}
   #question{padding:20px 0 ; text-align:center;}
   #chakan{font-size:30;}
   textarea{width:600px;height:120px;}
	form p{font-size:30}
	

/* general styles */

table, td{
	font:100% Arial, Helvetica, sans-serif; 
}
table{width:100%;border-collapse:collapse;margin:1em 0;}
th, td{text-align:left;padding:.5em;border:1px solid #fff;}
th{background:#1e90ff url(tr_back.gif) repeat-x;color:#fff;}
td{background:#e5f1f4;}

/* tablecloth styles */

tr.even td{background:#e5f1f4;}
tr.odd td{background:#f8fbfc;}

th.over, tr.even th.over, tr.odd th.over{background:#4a98af;}
th.down, tr.even th.down, tr.odd th.down{background:#bce774;}
th.selected, tr.even th.selected, tr.odd th.selected{}

td.over, tr.even td.over, tr.odd td.over{background:#ecfbd4;}
td.down, tr.even td.down, tr.odd td.down{background:#bce774;color:#fff;}
td.selected, tr.even td.selected, tr.odd td.selected{background:#bce774;color:#555;}
 

  